<h3>This is where we edit <%= @employee.to_s %></h3>

<%= form_for @employee do |f| %>
  First name: <%= f.text_field :first_name %><br>
  Last name: <%= f.text_field :last_name %><br>
  Nickname: <%= f.text_field :alias %><br>
  Title: <%= f.text_field :title %><br>
  Office: <%= f.text_field :office %><br>
  My picture: <%= f.text_field :img_url %><br>
  My doggo: <%= f.collection_select :dog_id, Dog.all, :id, :name %><br>
  <%= f.submit %>
<% end %>
